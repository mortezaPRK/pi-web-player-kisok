/usr/bin/chromium-browser \
--use-gl=angle \
--enable-gpu-rasterization \
--enable-accelerated-video-decode \
--enable-features=VaapiVideoDecoder \
--enable-zero-copy \
--noerrdialogs \
--disable-infobars \
--no-first-run \
--ozone-platform=wayland \
--enable-features=OverlayScrollbar \
--enable-features=UseOzonePlatform  \
--homepage="$URL" \
--kiosk \
"$URL"