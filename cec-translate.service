[Unit]
Description=Starts cec to ydotool translator
After=ydotoold.target

[Service]
Type=simple
Restart=always
RestartSec=3
Environment="YDOTOOL_SOCKET=/tmp/.ydotool_socket"
ExecStart=/usr/local/bin/cec-translate
KillMode=process
TimeoutSec=180
User=1000
Group=1000

[Install]
WantedBy=basic.target
